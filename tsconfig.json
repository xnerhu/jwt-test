{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,

    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext"],
    "moduleResolution": "node",

    "rootDir": "./src",

    "outDir": "./build"
  }
}
